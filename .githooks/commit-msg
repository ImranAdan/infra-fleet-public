#!/usr/bin/env bash
set -euo pipefail

if ! command -v gitlint >/dev/null 2>&1; then
  echo "gitlint not found. Install with: pip install -r requirements-dev.txt" >&2
  exit 1
fi

# Mirror CI skip rules for local commits.
FLUX_AUTHOR_NAME="fluxcdbot"
FLUX_AUTHOR_EMAIL="fluxcdbot@users.noreply.github.com"
GITHUB_WEBFLOW_EMAIL="noreply@github.com"

AUTHOR_NAME="${GIT_AUTHOR_NAME:-$(git config user.name)}"
AUTHOR_EMAIL="${GIT_AUTHOR_EMAIL:-$(git config user.email)}"
COMMITTER_EMAIL="${GIT_COMMITTER_EMAIL:-$(git config user.email)}"

if [[ "${AUTHOR_NAME}" == "${FLUX_AUTHOR_NAME}" && "${AUTHOR_EMAIL}" == "${FLUX_AUTHOR_EMAIL}" ]]; then
  echo "Skipping Flux bot commit"
  exit 0
fi

if [[ "${COMMITTER_EMAIL}" == "${GITHUB_WEBFLOW_EMAIL}" ]]; then
  echo "Skipping GitHub web-flow merge commit"
  exit 0
fi

gitlint --msg-filename "$1"
